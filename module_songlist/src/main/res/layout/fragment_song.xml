<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_singer_play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:background="@drawable/bofang"/>
        <TextView
            android:id="@+id/play_all"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/bt_singer_play"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="播放全部"/>
        <TextView
            android:id="@+id/play_right"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/play_all"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="("/>
        <TextView
            android:id="@+id/tv_singer_song_num"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/play_right"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/tv_singer_song_num"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text=")"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/singer_recyclerView"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" />

</RelativeLayout>